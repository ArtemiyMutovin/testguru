<%= form_with url: sessions_path, data: {turbo: false}, local: true do |form| %>
  <% if flash[:alert] %>
    <%=  content_tag :p, flash[:alert], class: 'flash alert' %>
  <% end %>

  <h2><p>
    <%= form.label :email %><br>
    <%= form.text_field :email, id: :email %>
  </p></h2>

  <h2><p>
    <%= form.label :password %><br>
    <%= form.password_field :password, id: :password %>
  </p></h2>

  <h1><p><%= form.submit 'Enter' %></p></h1>
<% end %>
